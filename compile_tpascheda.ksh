#!/bin/ksh

# Application Locations
# -----------------------------------------------------------------------------
export ANT_HOME=/opt/app/ant/1.7.1
# -----------------------------------------------------------------------------
# Java paths
# -----------------------------------------------------------------------------
export JAVA_HOME=/opt/app/jvm/jdk1.7.0_60
# -----------------------------------------------------------------------------
# Export the path for ANT
# -----------------------------------------------------------------------------
export PATH=$ANT_HOME/bin:$JAVA_HOME/bin:$PATH
#------------------------------------------------------------------------------
# Export the classpath to run ANT
# -----------------------------------------------------------------------------
export CLASSPATH=$ANT_HOME/lib:$JAVA_HOME/lib:$CLASSPATH

ant -f $(dirname $0)/Build.xml all
